@{
    bool loggedIn = false;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    
    <meta id="MetaDescription" name="DESCRIPTION" content="Tegud.net, personal site of Steve Elliott. Containing programming, photography, portfolio as well as my blog covering C#, ASP.NET MVC, SQL, jQuery, javascript, HTML 5.0, CSS3 and more" />
    <meta id="MetaKeywords" name="KEYWORDS" content="Steve Elliott,Stephen Elliott,C#,ASP.NET,MVC,jQuery,CSS,XHTML,HTML5,javascript,SQL,MSSQL Server" />
    
    <title>@ViewBag.Title</title>
    
    <link href="@Url.Content("~/Content/redmond/jquery-ui-1.8.13.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/ScriptHighlighter/shCore.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/ScriptHighlighter/shThemeRDark.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <!--[if IE]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]--> 
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/LAB.min.js")" type="text/javascript"></script>

    @MvcMiniProfiler.MiniProfiler.RenderIncludes()

    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-8186156-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</head>

<body>
    <header>
        <h1><a href="/">Tegud.NET</a></h1>
    </header>

    <div id="ContentContainer">
        @RenderBody()
    </div>

    <footer class="cufon">
        Copyright Stephen Elliott 2011
    </footer>

    @if (!(ViewBag.MinifyJS ?? false))
    {
    <script src="@Url.Content("~/Scripts/modernizr-2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ScriptHighlighter/sh.min.js")" type="text/javascript"></script>
            
    <script src="@Url.Content("~/Scripts/Tegud/base.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/AdminMenu/base.js")" type="text/javascript"></script>
    
    <script src="@Url.Content("~/Scripts/Utilities/base.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Utilities/yql.js")" type="text/javascript"></script>
    
    <script src="@Url.Content("~/Scripts/Tegud/ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Tegud/overlay.js")" type="text/javascript"></script>
        
    <script src="@Url.Content("~/Scripts/Metro/base.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/Tiles/base.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Tiles/Modules/Twitter.js")" type="text/javascript"></script>
    
    <script src="@Url.Content("~/Scripts/Cufon/cufon.js")" type="text/javascript"></script>
    }
    else
    { 
        <script src="@Url.Content("~/Scripts/Tegud.Base.min.js")" type="text/javascript"></script>
    }
        
    @RenderSection("Scripts", required: false)

    <script type="text/javascript">
        $(function () {
            SyntaxHighlighter.all();
            TEGUD.init($.extend({
                    Tiles: $('#Metro')
                },
                @Html.Raw(string.IsNullOrWhiteSpace(ViewBag.PageData) ? "{}" : ViewBag.PageData)
                ));
        });
    </script>
</body>
</html>
