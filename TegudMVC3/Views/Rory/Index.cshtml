	<style type="text/css">
		body { font-size: .85em; font-family: Verdana, Helvetica, Sans-Serif; color: #000; background-color: #fff; margin: 0; }
	
		.hidden { display: none; }
		
		.loading-message { width: 250px; height: 180px; padding: 10px; position: absolute; background-color: #eee; border-radius: 30px; border: 5px solid #dadada; }
		
		.loading-message-header { font-size: 1.3em; text-align: center; font-weight: bold; }
		
		.loading-message-status { text-align: center; }
		
		.spinner { width: 100px; margin: 25px auto 0 auto; padding: 0; list-style: none; position: relative; }
		
		.spinner > li { display: inline-block; width: 30px; height: 30px; background-color: #f6f6f6; padding: 0; margin: 0 0px 2px 0 }
		
		.spinner > li.on { background-color: #ccc; }
		
		.spinner > li:first-child { border-radius: 15px 0 0 0; }
		
		.spinner > li:nth-child(3) { border-radius: 0 15px 0 0; }
		
		.spinner > li:nth-child(3) { border-radius: 0 15px 0 0; }
		
		.spinner > li:nth-child(7) { border-radius: 0 0	0 15px; }
		
		.spinner > li:nth-child(9) { border-radius: 0 0 15px 0; }
		
		.spinner > li.central { width: 60px; height: 60px; position: absolute; background-color: #eee; top: 20px; left: 20px; border-radius: 15px; }
		
		.loading-message-header { margin-bottom: 10px; }
		
		.timeline { width: 100%; height: 95px; background-color: #ececec; border-top: solid 5px #ccc; position: fixed; bottom: -100px; left: 0px; }
		
		.timeline-segment { list-style:none; margin: 0; padding: 0; height:100%; display: inline-block; border-right: solid 1px #999; }
		
		.timeline-segment:last-child { border-right: 0 }
		
		.timeline-segment > li { display: inline-block; height: 100% }
		
		.timeline-segment > li:hover { cursor: pointer; background-color: #ccc; }
		
		.timeline-segment > li > div { width: 100%; }
		
		.timeline-segment > li > div.pictures { background-color: #2DBC39; }
		.timeline-segment > li > div.videos { background-color: #668CFF; }

        .grid-image > img { width: auto; height: auto; }

        .grid-image { position: absolute;cursor: pointer; overflow: hidden;}

        .grid-image > h2 { position: absolute;bottom: 5px;right: 5px;color: #fff;margin: 0;padding: 0;font-size: 1.8em; }

        .header-image img,
		.small-image-grid-item img { opacity: 0;-webkit-transition-property: opacity; -webkit-transition-duration: 1s;-moz-transition-property: opacity;-moz-transition-duration: 1s;-o-transition-property: opacity;-o-transition-duration: 1s;-ms-transition-property: opacity; -ms-transition-duration: 1s }

        .header-image img.loaded,
		.small-image-grid-item img.loaded { opacity: 1; }
		
		.small-image-grid-item { position: absolute; width: 75px; height: 75px; opacity: 0.4;-webkit-transition-property: opacity; -webkit-transition-duration: 1s;-moz-transition-property: opacity;-moz-transition-duration: 1s;-o-transition-property: opacity;-o-transition-duration: 1s;-ms-transition-property: opacity; -ms-transition-duration: 1s }
		
		.header-hover .small-image-grid-item { opacity: 0.8 }
	</style>
</head>
    <body>
        <div id="PhotoGrid"></div>
        
        <div id="InitialLoadingMessage" class="loading-message hidden">
            <div class="loading-message-header">Loading Rory's timeline</div>
            <div class="loading-message-status">Loading set 1/1</div>
            <ul class="spinner">
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li class="central"></li>
            </ul>
        </div>
        
